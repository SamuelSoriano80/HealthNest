@page "/checkins"
@rendermode InteractiveServer
@using HealthNest.Data
@using HealthNest.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Identity
@inject ApplicationDbContext Db
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<div class="d-flex justify-content-between align-items-center mt-3">
  <h3>My Check-Ins</h3>
  <a class="btn btn-success" href="/checkins/create">Create New</a>
</div>

@if (checkIns == null)
{
    <p>Loading...</p>
}
else if (!checkIns.Any())
{
    <p>No check-ins yet.</p>
}
else
{
    <table class="table table-striped mt-2">
        <thead>
            <tr>
                <th>Date</th>
                <th>Sleep</th>
                <th>Water</th>
                <th>Exercise</th>
                <th>Mood</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in checkIns)
            {
                <tr>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    <td>@item.SleepHours</td>
                    <td>@item.WaterIntake</td>
                    <td>@item.ExerciseMinutes</td>
                    <td>@item.Mood</td>
                    <td>
                        <a class="btn btn-sm btn-primary me-1" href="/checkins/edit/@item.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" href="/checkins/delete/@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    private List<CheckIn> checkIns;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);

        checkIns = Db.CheckIns
            .Where(c => c.UserId == user.Id)
            .OrderByDescending(c => c.Date)
            .ToList();
    }
}